---
interface Props {
  title: string;
  description: string;
  ctaText: string;
  ctaUrl: string;
  deadline?: string;
  openInNewTab?: boolean;
}

const {
  title,
  description,
  ctaText,
  ctaUrl,
  deadline,
  openInNewTab = false,
} = Astro.props;
---

<section class="section-light py-16 px-6">
  <div class="container mx-auto max-w-8xl">
    <div
      class="bg-white rounded-2xl shadow-2xl p-10 border-2 border-primary/20 text-left"
    >
      <div class="flex items-start justify-between mb-6">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-dark">
          {title}
        </h2>
        {
          deadline && (
            <div class="text-sm text-gray-600 font-semibold whitespace-nowrap ml-4">
              {deadline}
            </div>
          )
        }
      </div>
      <p class="text-lg text-gray-700 leading-relaxed mb-8">
        {description}
      </p>
      <div class="flex justify-center">
        <a
          href={ctaUrl}
          target={openInNewTab ? "_blank" : undefined}
          rel={openInNewTab ? "noopener noreferrer" : undefined}
          class="btn-primary px-8 py-4 rounded-xl text-lg font-semibold transition transform hover:scale-105 shadow-lg shadow-blue-500/30 inline-block"
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</section>
