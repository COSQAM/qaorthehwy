---
interface Link {
  title: string;
  url: string;
  linkType: string;
}

interface Props {
  name: string;
  tagLine?: string;
  profilePicture?: string;
  isKeynote?: boolean;
  links?: Link[];
  speakerSlug?: string;
}

const { name, tagLine, profilePicture, isKeynote = false, links = [], speakerSlug } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div class="bg-white rounded-xl shadow-xl overflow-hidden hover:shadow-2xl transition-all hover:scale-105 transform duration-300 border border-gray-100">
  <a href={speakerSlug ? `${base}speakers/${speakerSlug}` : '#'} class="block">
    {profilePicture && (
      <img
        src={profilePicture}
        alt={name}
        class="w-full h-72 object-cover"
      />
    )}
  </a>
  <div class="p-8">
    {isKeynote && (
      <span class="inline-block btn-primary text-xs px-4 py-1.5 rounded-full mb-3 font-bold uppercase tracking-wide">
        Keynote Speaker
      </span>
    )}
    <a href={speakerSlug ? `${base}speakers/${speakerSlug}` : '#'} class="block">
      <h3 class="text-2xl font-bold mb-3 text-dark hover:text-primary transition-colors">{name}</h3>
    </a>
    {tagLine && <p class="text-gray-600 text-base leading-relaxed mb-4">{tagLine}</p>}
    {links.length > 0 && (
      <div class="flex gap-3 mt-4">
        {links.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary transition-colors"
            aria-label={`${name}'s ${link.linkType}`}
          >
            {link.linkType === 'Twitter' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
              </svg>
            )}
            {link.linkType === 'LinkedIn' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
              </svg>
            )}
            {link.linkType !== 'Twitter' && link.linkType !== 'LinkedIn' && (
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
            )}
          </a>
        ))}
      </div>
    )}
  </div>
</div>
