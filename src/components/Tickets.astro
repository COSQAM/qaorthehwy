---
import { getActiveTiers, givebutterCampaign } from "../config/tickets";
import type { TicketStyle } from "../config/tickets";

interface TicketTier {
  id: string;
  name: string;
  price: string;
  features: string[];
  enabled: boolean;
  style: TicketStyle;
  deadline?: string;
}

const tiers = getActiveTiers() as TicketTier[];

// Helper function to get style classes based on ticket style
function getStyleClasses(style: TicketStyle, enabled: boolean): string {
  const baseClasses =
    "bg-white rounded-2xl shadow-2xl p-10 border-2 transition-all transform duration-300";

  switch (style) {
    case "highlighted":
      return `${baseClasses} border-primary hover:border-primary hover:scale-105 ring-2 ring-primary/20`;
    case "dimmed":
      return `${baseClasses} bg-gray-100 opacity-75 border-gray-300`;
    case "normal":
    default:
      return `${baseClasses} border-white/20 hover:border-white hover:scale-105`;
  }
}

function getButtonClasses(style: TicketStyle, enabled: boolean): string {
  if (!enabled) {
    return "w-full py-4 px-8 rounded-xl text-lg font-bold bg-gray-300 text-gray-500 cursor-not-allowed";
  }

  const baseClasses =
    "w-full py-4 px-8 rounded-xl text-lg font-bold transition transform hover:scale-105";

  switch (style) {
    case "highlighted":
      return `${baseClasses} btn-primary shadow-lg shadow-blue-500/30`;
    case "normal":
    default:
      return `${baseClasses} btn-primary shadow-lg shadow-blue-500/30`;
  }
}
---

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const styleGivebutterButton = () => {
      const ticketsSection = document.querySelector('#tickets');
      if (!ticketsSection) return;

      ticketsSection.querySelectorAll('givebutter-button').forEach(gb => {
        let button = gb.shadowRoot
          ? gb.shadowRoot.querySelector('button[slot="invoker"]')
          : gb.querySelector('button[slot="invoker"]');

        if (button) {
          button.style.setProperty('width', '100%', 'important');
          button.style.setProperty('min-width', '100%', 'important');
          button.style.setProperty('max-width', '100%', 'important');
          button.style.setProperty('padding', '1rem 2rem', 'important');
          button.style.setProperty('font-size', '1.125rem', 'important');
          button.style.setProperty('font-weight', '700', 'important');
          button.style.setProperty('height', 'auto', 'important');
          button.style.setProperty('min-height', 'auto', 'important');
          button.classList.remove('w-fit', 'h-4');
        }
      });
    };

    setTimeout(styleGivebutterButton, 100);
    setTimeout(styleGivebutterButton, 500);
    setTimeout(styleGivebutterButton, 1000);

    const observer = new MutationObserver(styleGivebutterButton);
    const ticketsSection = document.querySelector('#tickets');
    if (ticketsSection) {
      observer.observe(ticketsSection, { childList: true, subtree: true });
    }
  });
</script>

<section id="tickets" class="section-light py-24 px-6">
  <div class="container mx-auto max-w-8xl">
    <h2 class="text-5xl md:text-6xl font-bold text-center mb-20 tracking-tight">
      TICKETS
    </h2>
    <div
      class={`grid grid-cols-1 gap-10 max-w-6xl mx-auto ${tiers.length > 1 ? "md:grid-cols-2" : "md:grid-cols-1 max-w-xl"}`}
    >
      {
        tiers.map((tier) => (
          <div class={getStyleClasses(tier.style, tier.enabled)}>
            <div class="flex items-start justify-between mb-8">
              <div>
                <h3 class="text-3xl font-bold text-dark uppercase tracking-wide mb-2">
                  {tier.name}
                </h3>
                <div class="text-5xl font-bold text-primary">{tier.price}</div>
              </div>
              <div class="text-right flex flex-col items-end gap-2">
                {tier.style === "highlighted" && (
                  <span class="bg-primary text-white px-3 py-1 rounded-full text-sm font-bold uppercase">
                    Best Value
                  </span>
                )}
                {tier.deadline && (
                  <div class="text-sm text-gray-600 font-semibold">
                    {tier.deadline}
                  </div>
                )}
              </div>
            </div>
            <ul class="mb-10 space-y-4">
              {tier.features.map((feature) => (
                <li class="flex items-start">
                  <svg
                    class="w-6 h-6 text-primary mr-3 mt-0.5 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-dark text-lg">{feature}</span>
                </li>
              ))}
            </ul>
            {tier.enabled ? (
              <div class="w-full">
                <givebutter-button
                  campaign={givebutterCampaign}
                  label="BUY NOW"
                  background-color="#3148F6"
                  label-color="#FFFFFF"
                  border-radius="12"
                  drop-shadow="true"
                  icon="none"
                ></givebutter-button>
              </div>
            ) : (
              <button
                class="w-full py-4 px-8 rounded-xl text-lg font-bold bg-gray-300 text-gray-500 cursor-not-allowed"
                disabled
              >
                COMING SOON
              </button>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
