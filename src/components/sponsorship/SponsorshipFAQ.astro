---
import type { FAQ } from '../../config/sponsorship';

interface Props {
  faqs: FAQ[];
}

const { faqs } = Astro.props;
---

<section class="py-20 px-6">
  <div class="container mx-auto max-w-4xl">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 tracking-tight text-dark">
      FREQUENTLY ASKED QUESTIONS
    </h2>
    <p class="text-center text-lg text-gray-600 mb-12 max-w-2xl mx-auto">
      Find answers to common questions about sponsorship opportunities, deadlines, and benefits.
    </p>

    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <div class="faq-item bg-white rounded-lg shadow-md border-l-4 transition-all hover:shadow-lg" style="border-left-color: var(--color-primary);">
          <button
            class="faq-question w-full text-left p-6 flex justify-between items-start gap-4 transition-colors hover:bg-gray-50"
            data-faq={index}
            aria-expanded="false"
          >
            <h3 class="text-lg md:text-xl font-bold text-dark pr-4 flex-1">
              {faq.question}
            </h3>
            <svg
              class="faq-chevron w-6 h-6 text-primary transition-transform flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </button>
          <div class="faq-answer hidden">
            <div class="px-6 pb-6">
              <p class="text-gray-700 leading-relaxed">
                {faq.answer}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-600 mb-4">
        Have a question not listed here?
      </p>
      <a
        href="#sponsorship-form"
        class="inline-block btn-primary px-8 py-3 rounded-lg font-semibold transition hover:scale-105"
      >
        Contact Us
      </a>
    </div>
  </div>
</section>

<script>
  // FAQ accordion toggle functionality
  document.querySelectorAll('.faq-question').forEach((button) => {
    button.addEventListener('click', () => {
      const answer = button.nextElementSibling as HTMLElement;
      const chevron = button.querySelector('.faq-chevron') as HTMLElement;
      const isExpanded = button.getAttribute('aria-expanded') === 'true';

      // Toggle current FAQ
      button.setAttribute('aria-expanded', (!isExpanded).toString());
      answer.classList.toggle('hidden');

      // Rotate chevron
      if (answer.classList.contains('hidden')) {
        chevron.style.transform = 'rotate(0deg)';
      } else {
        chevron.style.transform = 'rotate(180deg)';
      }
    });
  });
</script>

<style>
  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .faq-answer:not(.hidden) {
    max-height: 500px;
    transition: max-height 0.5s ease-in;
  }
</style>
