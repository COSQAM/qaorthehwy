---
interface Props {
  slackLink?: string;
  feedbackLink?: string;
}

const { slackLink, feedbackLink } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="relative text-white py-16 px-6 border-t" style="background-color: var(--color-dark); border-color: color-mix(in srgb, var(--color-primary) 20%, transparent);">
  <div class="absolute inset-0" style="background: radial-gradient(ellipse at bottom, rgba(49, 72, 246, 0.05) 0%, transparent 60%);"></div>
  <div class="container mx-auto max-w-8xl relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <div>
        <h3 class="text-xl font-bold mb-4 text-white tracking-tight">QA OR THE HIGHWAY</h3>
        <p class="text-gray-400 leading-relaxed">
          A conference dedicated to quality engineering professionals.
        </p>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4 uppercase tracking-wide">Quick Links</h4>
        <ul class="space-y-3">
          <li><a href="#speakers" class="text-gray-400 hover:text-primary transition">Speakers</a></li>
          <li><a href="#schedule" class="text-gray-400 hover:text-primary transition">Schedule</a></li>
          <li><a href="#tickets" class="text-gray-400 hover:text-primary transition">Tickets</a></li>
          <li><a href="#sponsors" class="text-gray-400 hover:text-primary transition">Sponsors</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4 uppercase tracking-wide">Connect</h4>
        <ul class="space-y-3">
          {slackLink && (
            <li>
              <a href={slackLink} class="text-gray-400 hover:text-primary transition">
                Join us on Slack
              </a>
            </li>
          )}
          {feedbackLink && (
            <li>
              <a href={feedbackLink} class="text-gray-400 hover:text-primary transition">
                Leave Feedback
              </a>
            </li>
          )}
        </ul>
      </div>
    </div>
    <div class="border-t border-gray-800 pt-8 text-center text-gray-500">
      <p>&copy; {currentYear} QA or the Highway. All rights reserved.</p>
    </div>
  </div>
</footer>
