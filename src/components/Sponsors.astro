---
interface Sponsor {
  name: string;
  logo: string;
  website?: string;
}

interface Props {
  platinum?: Sponsor[];
  gold?: Sponsor[];
  silver?: Sponsor[];
  lunch?: Sponsor[];
  snack?: Sponsor[];
  tshirt?: Sponsor[];
}

const { platinum = [], gold = [], silver = [], lunch = [], snack = [], tshirt = [] } = Astro.props;

const tiers = [
  { title: 'Platinum Sponsors', sponsors: platinum, gridCols: 'md:grid-cols-2' },
  { title: 'Gold Sponsors', sponsors: gold, gridCols: 'md:grid-cols-3' },
  { title: 'Silver Sponsors', sponsors: silver, gridCols: 'md:grid-cols-4' },
  { title: 'Lunch Sponsors', sponsors: lunch, gridCols: 'md:grid-cols-3' },
  { title: 'Snack Sponsors', sponsors: snack, gridCols: 'md:grid-cols-4' },
  { title: 'T-Shirt Sponsors', sponsors: tshirt, gridCols: 'md:grid-cols-4' },
].filter(tier => tier.sponsors.length > 0);
---

<section id="sponsors" class="section-light py-24 px-6">
  <div class="container mx-auto max-w-8xl">
    <h2 class="text-5xl md:text-6xl font-bold text-center mb-20 tracking-tight">OUR SPONSORS</h2>
    {tiers.map((tier) => (
      <div class="mb-16">
        <h3 class="text-3xl font-semibold text-center mb-10 text-dark uppercase tracking-wide">{tier.title}</h3>
        <div class={`grid grid-cols-1 ${tier.gridCols} gap-10`}>
          {tier.sponsors.map((sponsor) => (
            <div class="flex items-center justify-center p-8 bg-white rounded-xl shadow-lg hover:shadow-xl transition-all hover:scale-105 transform duration-300 border border-gray-100">
              {sponsor.website ? (
                <a href={sponsor.website} target="_blank" rel="noopener noreferrer">
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="max-h-28 w-auto"
                  />
                </a>
              ) : (
                <img
                  src={sponsor.logo}
                  alt={sponsor.name}
                  class="max-h-28 w-auto"
                />
              )}
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
