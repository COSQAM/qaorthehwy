---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import TierCard from '../components/sponsorship/TierCard.astro';
import WhySponsor from '../components/sponsorship/WhySponsor.astro';
import TierComparison from '../components/sponsorship/TierComparison.astro';
import BenefitsAccordion from '../components/sponsorship/BenefitsAccordion.astro';
import DownloadResources from '../components/sponsorship/DownloadResources.astro';
import SponsorshipFAQ from '../components/sponsorship/SponsorshipFAQ.astro';
import SponsorshipForm from '../components/sponsorship/SponsorshipForm.astro';
import { sponsorshipConfig } from '../config/sponsorship';

const { tiers, demographics, faqs, resources, benefitCategories } = sponsorshipConfig;
---

<Layout title="Sponsorship Opportunities - QA or the Highway 2026">
  <main class="bg-textured-light min-h-screen">
    <!-- Hero Section -->
    <PageHeader
      title="Partner With Us"
      description="Reach 400+ quality engineering professionals and showcase your brand at the Midwest's premier software quality conference on June 12, 2026."
    />

    <!-- Why Sponsor Section -->
    <WhySponsor demographics={demographics} />

    <!-- Tier Overview Cards -->
    <section class="py-24 px-6">
      <div class="container mx-auto max-w-8xl">
        <h2 class="text-5xl md:text-6xl font-bold text-center mb-4 tracking-tight text-dark">
          SPONSORSHIP TIERS
        </h2>
        <p class="text-center text-lg text-gray-600 mb-16 max-w-3xl mx-auto">
          Choose the sponsorship level that aligns with your goals and budget. All tiers include valuable brand exposure and attendee engagement.
        </p>

        <!-- Main Sponsorship Tiers -->
        <div class="mb-20">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {tiers.filter(t => ['platinum', 'gold', 'silver'].includes(t.id)).map((tier) => (
              <TierCard tier={tier} />
            ))}
          </div>
        </div>

        <!-- Additional Sponsorships -->
        <div class="mb-12">
          <h3 class="text-3xl md:text-4xl font-bold text-center mb-3 tracking-tight text-dark">
            Additional Sponsorships
          </h3>
          <p class="text-center text-gray-600 mb-10 max-w-2xl mx-auto">
            Targeted visibility opportunities for lunch, t-shirts, snacks, and lanyards.
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {tiers.filter(t => ['lunch', 'tshirt', 'snack', 'lanyard'].includes(t.id)).map((tier) => (
              <TierCard tier={tier} />
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Interactive Comparison Table -->
    <TierComparison tiers={tiers.filter(t => ['platinum', 'gold', 'silver'].includes(t.id))} />

    <!-- Benefits Breakdown Accordion -->
    <BenefitsAccordion benefits={benefitCategories} />

    <!-- Download Resources -->
    <DownloadResources resources={resources} />

    <!-- FAQ Section -->
    <SponsorshipFAQ faqs={faqs} />

    <!-- Sponsorship Inquiry Form -->
    <SponsorshipForm />

    <!-- Final CTA Section -->
    <section class="py-20 px-6">
      <div class="container mx-auto max-w-4xl text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-dark mb-6">
          Ready to Make an Impact?
        </h2>
        <p class="text-xl text-gray-700 mb-10 max-w-2xl mx-auto">
          Join leading organizations in supporting the quality engineering community. Limited spots available for premium tiers.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#sponsorship-form"
            class="btn-primary px-10 py-4 rounded-xl text-lg font-bold transition transform hover:scale-105 shadow-lg shadow-blue-500/30"
          >
            Request Information
          </a>
          <a
            href="/sponsorship/SPONSORSHIP_2026.pdf"
            target="_blank"
            class="bg-white text-primary px-10 py-4 rounded-xl text-lg font-bold transition transform hover:scale-105 shadow-lg border-2 border-primary hover:bg-gray-50"
          >
            Download Prospectus
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Ensure proper spacing for anchor links with fixed header */
  section[id] {
    scroll-margin-top: 100px;
  }
</style>
