---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const previousYears = [
  // Add previous conference years here
  // Example:
  // {
  //   year: 2024,
  //   date: 'June 15-16, 2024',
  //   location: 'Columbus, OH',
  //   attendees: 250,
  //   sessions: 30,
  //   speakers: 25,
  //   highlights: 'Conference highlights and recap...',
  //   links: {
  //     website: '/archive/2024',
  //     videos: 'https://youtube.com/...',
  //     photos: 'https://photos.google.com/...',
  //   }
  // },
];
---

<Layout title="Archive - QA or the Highway">
  <main>
    <PageHeader
      title="Conference Archive"
      description="Explore past conferences, sessions, and highlights."
    />

    <section class="py-16 px-4">
      <div class="container mx-auto max-w-6xl">
        {previousYears.length > 0 ? (
          <div class="space-y-8">
            {previousYears.map((year: any) => (
              <div class="bg-white rounded-lg shadow-lg p-8 border-l-4" style="border-left-color: var(--color-primary);">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-6">
                  <div>
                    <h2 class="text-3xl font-bold mb-2">{year.year}</h2>
                    <p class="text-gray-600 mb-1">{year.date}</p>
                    <p class="text-gray-600">{year.location}</p>
                  </div>
                  <div class="mt-4 md:mt-0 grid grid-cols-3 gap-4 text-center">
                    <div>
                      <div class="text-2xl font-bold text-primary">{year.attendees}</div>
                      <div class="text-sm text-gray-600">Attendees</div>
                    </div>
                    <div>
                      <div class="text-2xl font-bold text-primary">{year.sessions}</div>
                      <div class="text-sm text-gray-600">Sessions</div>
                    </div>
                    <div>
                      <div class="text-2xl font-bold text-primary">{year.speakers}</div>
                      <div class="text-sm text-gray-600">Speakers</div>
                    </div>
                  </div>
                </div>

                <p class="text-gray-700 mb-6">{year.highlights}</p>

                <div class="flex flex-wrap gap-4">
                  {year.links.website && (
                    <a
                      href={year.links.website}
                      class="btn-primary px-6 py-2 rounded-lg transition"
                    >
                      View Website
                    </a>
                  )}
                  {year.links.videos && (
                    <a
                      href={year.links.videos}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="border-2 text-primary px-6 py-2 rounded-lg hover:bg-blue-50 transition"
                      style="border-color: var(--color-primary);"
                    >
                      Watch Videos
                    </a>
                  )}
                  {year.links.photos && (
                    <a
                      href={year.links.photos}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="border-2 text-primary px-6 py-2 rounded-lg hover:bg-blue-50 transition"
                      style="border-color: var(--color-primary);"
                    >
                      View Photos
                    </a>
                  )}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-xl text-gray-600 mb-4">This is our inaugural conference!</p>
            <p class="text-gray-500">Check back next year for conference archives and recordings.</p>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>
