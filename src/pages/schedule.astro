---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import sessionizeData from '../data/sessionize.json';
import { getSchedulePhaseConfig } from '../config/schedule';

// Get current schedule phase configuration
const schedulePhase = getSchedulePhaseConfig();

// Create lookup maps for speakers and rooms
const speakerMap = new Map(sessionizeData.speakers.map(s => [s.id, s]));
const roomMap = new Map(sessionizeData.rooms.map(r => [r.id, r]));

// Group all sessions (including service sessions) by time slot
const sessionsByTime = new Map();
sessionizeData.sessions.forEach((session: any) => {
  const timeKey = `${session.startsAt}|${session.endsAt}`;
  if (!sessionsByTime.has(timeKey)) {
    sessionsByTime.set(timeKey, []);
  }
  sessionsByTime.get(timeKey).push(session);
});

// Sort time slots chronologically
const sortedTimeSlots = Array.from(sessionsByTime.entries()).sort((a, b) => {
  return new Date(a[0].split('|')[0]).getTime() - new Date(b[0].split('|')[0]).getTime();
});

// Format time for display
function formatTime(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
}
---

<Layout title="Schedule - QA or the Highway">
  <main>
    <PageHeader
      title="Conference Schedule"
      description="Full day of sessions, workshops, and networking opportunities."
    />

    <section class="py-16 px-4">
      <div class="container mx-auto max-w-7xl">
        {schedulePhase.showSchedule && sessionizeData.sessions.length > 0 ? (
          <div class="space-y-12">
            {sortedTimeSlots.map(([timeKey, sessions]) => {
              const [startsAt, endsAt] = timeKey.split('|');
              return (
                <div class="time-slot">
                  <div class="mb-6">
                    <h4 class="text-2xl font-bold text-dark uppercase tracking-wide">
                      {formatTime(startsAt)} - {formatTime(endsAt)}
                    </h4>
                  </div>
                  <div class="grid gap-6">
                    {sessions.map((session: any) => {
                      const speaker = session.speakers && session.speakers.length > 0
                        ? speakerMap.get(session.speakers[0])
                        : null;
                      const room = roomMap.get(session.roomId);
                      const speakerSlug = speaker
                        ? `${speaker.firstName.toLowerCase()}-${speaker.lastName.toLowerCase()}`
                        : null;
                      const speakerUrl = speakerSlug ? `/speakers/${speakerSlug}` : '#';

                      // Service sessions (like breaks, lunch, registration) - display differently
                      if (session.isServiceSession) {
                        return (
                          <div
                            class="service-session bg-white rounded-lg shadow-sm p-6 border-l-4 text-center"
                            style="border-left-color: var(--color-primary);"
                          >
                            <h3 class="text-xl font-bold text-dark">
                              {session.title}
                            </h3>
                            {session.description && (
                              <p class="text-gray-700 mt-2">
                                {session.description}
                              </p>
                            )}
                          </div>
                        );
                      }

                      // Regular sessions - clickable cards
                      return (
                        <a
                          href={speakerUrl}
                          class="session-card block bg-white rounded-lg shadow-md p-6 border-l-4 transition-all duration-200 hover:shadow-xl hover:scale-[1.02]"
                          style="border-left-color: var(--color-primary);"
                        >
                          <div class="flex flex-col h-full">
                            <h3 class="text-xl font-bold mb-3 text-dark hover:text-primary transition-colors">
                              {session.title}
                            </h3>
                            <p class="text-gray-700 mb-4 flex-grow line-clamp-3">
                              {session.description}
                            </p>
                            <div class="text-sm flex gap-8">
                              {speaker && (
                                <div class="flex items-center gap-2 flex-1">
                                  <img
                                    src={speaker.profilePicture}
                                    alt={speaker.fullName}
                                    class="w-8 h-8 rounded-full object-cover"
                                  />
                                  <p class="font-semibold text-dark">
                                    {speaker.fullName}
                                  </p>
                                </div>
                              )}
                              {room && (
                                <span class="text-gray-600 flex items-center gap-1 flex-1">
                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                  </svg>
                                  {room.name}
                                </span>
                              )}
                            </div>
                          </div>
                        </a>
                      );
                    })}
                  </div>
                </div>
              );
            })}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-xl text-gray-600 mb-4">{schedulePhase.message?.title || 'Schedule coming soon!'}</p>
            <p class="text-gray-500">{schedulePhase.message?.subtitle || "We're working on an amazing lineup of sessions."}</p>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
