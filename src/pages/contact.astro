---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="Contact - QA or the Highway">
  <main>
    <PageHeader
      title="Contact Us"
      description="Have questions? We'd love to hear from you."
    />

    <section class="py-16 px-4">
      <div class="container mx-auto max-w-4xl">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-4">General Inquiries</h2>
            <p class="text-gray-700 mb-4">
              For general questions about the conference, please email:
            </p>
            <a
              href="mailto:info@qaorthehwy.com"
              class="text-primary hover:text-primary-dark font-semibold"
              style="color: var(--color-primary);"
            >
              info@qaorthehwy.com
            </a>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-4">Sponsorship</h2>
            <p class="text-gray-700 mb-4">
              Interested in sponsoring the conference?
            </p>
            <a
              href="mailto:sponsors@qaorthehwy.com"
              class="text-primary hover:text-primary-dark font-semibold"
              style="color: var(--color-primary);"
            >
              sponsors@qaorthehwy.com
            </a>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-4">Speaking</h2>
            <p class="text-gray-700 mb-4">
              Want to speak at the conference?
            </p>
            <a
              href="mailto:speakers@qaorthehwy.com"
              class="text-primary hover:text-primary-dark font-semibold"
              style="color: var(--color-primary);"
            >
              speakers@qaorthehwy.com
            </a>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold mb-4">Join Our Community</h2>
            <p class="text-gray-700 mb-4">
              Connect with fellow attendees on Slack:
            </p>
            <a
              href="#"
              class="inline-block btn-primary px-6 py-2 rounded-lg transition"
            >
              Join Slack
            </a>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-gray-700 font-semibold mb-2">
                Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent"
                style="--tw-ring-color: var(--color-primary);"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-gray-700 font-semibold mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent"
                style="--tw-ring-color: var(--color-primary);"
                required
              />
            </div>

            <div>
              <label for="subject" class="block text-gray-700 font-semibold mb-2">
                Subject
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent"
                style="--tw-ring-color: var(--color-primary);"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-gray-700 font-semibold mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent"
                style="--tw-ring-color: var(--color-primary);"
                required
              ></textarea>
            </div>

            <button
              type="submit"
              class="btn-primary px-8 py-3 rounded-lg font-semibold transition"
            >
              Send Message
            </button>
          </form>
          <p class="text-gray-500 text-sm mt-4">
            Note: This form requires backend integration to function.
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>
