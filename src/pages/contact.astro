---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="Contact - QA or the Highway">
  <main>
    <PageHeader
      title="Contact Us"
      description="Have questions? We'd love to hear from you."
    />

    <section class="py-16 px-4">
      <div class="container mx-auto max-w-4xl">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Email Us</h2>
            <p class="text-gray-700 mb-4">
              You can reach us by email at
            </p>
            <a
              href="mailto:cosqam@gmaiil.com"
              class="text-primary hover:text-primary-dark font-semibold"
            >
              cosqam@gmail.com
            </a>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Join Our Slack</h2>
            <p class="text-gray-700 mb-4">
              Connect with fellow attendees on Slack
            </p>
            <a
              href="https://join.slack.com/t/qaorthehwy/shared_invite/zt-18erd50r8-1hzOCOkriNCvVdLgHDKMKQ"
              class="inline-block btn-primary px-6 py-2 rounded-lg transition"
              target="_blank"
              rel="noopener noreferrer"
            >
              Join Slack
            </a>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6">Send Us a Message</h2>
          <form id="contactForm" class="space-y-6">
            <input type="hidden" name="access_key" value="8193c58a-7cb2-4c62-af39-eb0e75cb7273" />

            <div>
              <label for="name" class="block text-gray-700 font-semibold mb-2">
                Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent text-gray-900"
                style="--tw-ring-color: var(--color-primary);"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-gray-700 font-semibold mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent text-gray-900"
                style="--tw-ring-color: var(--color-primary);"
                required
              />
            </div>

            <div>
              <label for="category" class="block text-gray-700 font-semibold mb-2">
                Category *
              </label>
              <div class="relative">
                <select
                  id="category"
                  name="category"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent text-gray-900 bg-white appearance-none pr-10"
                  style="--tw-ring-color: var(--color-primary);"
                  required
                >
                  <option value="General" selected>General</option>
                  <option value="Sponsorship">Sponsorship</option>
                  <option value="Speaking">Speaking</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                  <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
                  </svg>
                </div>
              </div>
            </div>

            <div>
              <label for="subject" class="block text-gray-700 font-semibold mb-2">
                Subject *
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent text-gray-900"
                style="--tw-ring-color: var(--color-primary);"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-gray-700 font-semibold mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent text-gray-900"
                style="--tw-ring-color: var(--color-primary);"
                required
              ></textarea>
            </div>

            <button
              type="submit"
              class="btn-primary px-8 py-3 rounded-lg transition"
            >
              Send Message
            </button>

            <div id="result" class="text-center font-semibold"></div>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const result = document.getElementById('result') as HTMLDivElement;

  form.addEventListener('submit', async (event) => {
    event.preventDefault();
    result.textContent = "Sending....";
    result.className = "text-center font-semibold text-gray-600 mt-4";

    const formData = new FormData(form);

    try {
      const response = await fetch("https://api.web3forms.com/submit", {
        method: "POST",
        body: formData
      });

      const data = await response.json();

      if (data.success) {
        result.textContent = "Thanks for reaching out! We've received your message and someone from the team will get back to you soon.";
        result.className = "text-center font-semibold text-green-600 mt-4";
        form.reset();
      } else {
        result.textContent = "Error: " + (data.message || "Something went wrong");
        result.className = "text-center font-semibold text-red-600 mt-4";
      }
    } catch (error) {
      result.textContent = "Error: Unable to submit form";
      result.className = "text-center font-semibold text-red-600 mt-4";
    }
  });
</script>
