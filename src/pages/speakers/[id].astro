---
import Layout from "../../layouts/Layout.astro";
import sessionizeData from "../../data/sessionize.json";

type Session = {
  id: string;
  title: string;
  description?: string;
  startsAt: string;
  endsAt: string;
  roomId: number;
  speakers: string[];
};

type Speaker = {
  id: string;
  firstName: string;
  lastName: string;
  fullName: string;
  bio?: string;
  tagLine?: string;
  profilePicture?: string;
  links: Array<{ url: string; linkType: string; title: string }>;
};

export function getStaticPaths() {
  return sessionizeData.speakers.map((speaker) => {
    const slug = `${speaker.firstName.toLowerCase()}-${speaker.lastName.toLowerCase()}`;
    return {
      params: { id: slug },
      props: { speaker },
    };
  });
}

const { speaker } = Astro.props as { speaker: Speaker };

// Get speaker's sessions
const speakerSessions = (sessionizeData.sessions as Session[]).filter((session) =>
  session.speakers.includes(speaker.id),
);

// Helper function to get room name
function getRoomName(roomId: number) {
  const room = sessionizeData.rooms.find((r) => r.id === roomId);
  return room ? room.name : "TBA";
}

function formatTime(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleString("en-US", {
    hour: "numeric",
    minute: "2-digit",
    hour12: true,
  });
}
---

<Layout title={`${speaker.fullName} - QA or the Highway`}>
  <main class="py-16 px-4">
    <div class="container mx-auto max-w-6xl">
      <!-- Back Button -->
      <button
        onclick="history.back()"
        class="inline-flex items-center border-2 border-primary text-primary px-6 py-2 rounded-lg font-semibold hover:bg-primary/10 transition mb-8 cursor-pointer"
        style="border-color: var(--color-primary);"
      >
        <svg
          class="w-5 h-5 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        Back
      </button>

      <!-- Speaker Profile Section -->
      <div class="bg-white rounded-xl shadow-xl overflow-hidden mb-12">
        <div class="grid md:grid-cols-[300px_1fr] gap-0">
          <!-- Left: Speaker Image -->
          <div class="bg-gray-100">
            {
              speaker.profilePicture && (
                <img
                  src={speaker.profilePicture}
                  alt={speaker.fullName}
                  class="w-full h-full object-cover"
                />
              )
            }
          </div>

          <!-- Right: Speaker Info -->
          <div class="p-8 md:p-12">
            <h1 class="text-4xl font-bold mb-3 text-dark">
              {speaker.fullName}
            </h1>
            {
              speaker.tagLine && (
                <p class="text-xl text-gray-600 mb-6 font-medium">
                  {speaker.tagLine}
                </p>
              )
            }

            {
              speaker.bio && (
                <div class="mb-6">
                  <h4 class="text-lg font-semibold mb-2 text-dark">About</h4>
                  <p class="text-gray-700 leading-relaxed">{speaker.bio}</p>
                </div>
              )
            }

            {
              speaker.links && speaker.links.length > 0 && (
                <div>
                  <h4 class="text-lg font-semibold mb-3 text-dark">Connect</h4>
                  <div class="flex gap-4">
                    {speaker.links.map((link) => (
                      <a
                        href={link.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-gray-700 hover:text-primary transition-colors px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200"
                      >
                        {link.linkType === "Twitter" && (
                          <>
                            <svg
                              class="w-5 h-5"
                              fill="currentColor"
                              viewBox="0 0 24 24"
                              aria-hidden="true"
                            >
                              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                            </svg>
                            <span>Twitter</span>
                          </>
                        )}
                        {link.linkType === "LinkedIn" && (
                          <>
                            <svg
                              class="w-5 h-5"
                              fill="currentColor"
                              viewBox="0 0 24 24"
                              aria-hidden="true"
                            >
                              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                            </svg>
                            <span>LinkedIn</span>
                          </>
                        )}
                        {link.linkType !== "Twitter" &&
                          link.linkType !== "LinkedIn" && (
                            <>
                              <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                                />
                              </svg>
                              <span>{link.linkType}</span>
                            </>
                          )}
                      </a>
                    ))}
                  </div>
                </div>
              )
            }
          </div>
        </div>
      </div>

      <!-- Sessions Section -->

      { speakerSessions.length > 0 ? (
          <div class="space-y-6">
            {speakerSessions.map((session) => (
              <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
                <h3 class="text-2xl font-bold mb-4 text-dark">
                  {session.title}
                </h3>

                <div class="flex items-start gap-6 mb-6">
                  <div class="flex items-start gap-3">
                    <svg
                      class="w-6 h-6 text-primary mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    <div>
                      <div class="font-semibold text-dark">Time</div>
                      <div class="text-gray-600">
                        {formatTime(session.startsAt)} -{" "}
                        {formatTime(session.endsAt)}
                      </div>
                    </div>
                  </div>

                  <div class="flex items-start gap-3">
                    <svg
                      class="w-6 h-6 text-primary mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </svg>
                    <div>
                      <div class="font-semibold text-dark">Room</div>
                      <div class="text-gray-600">
                        {getRoomName(session.roomId)}
                      </div>
                    </div>
                  </div>
                </div>

                {session.description && (
                  <div>
                    <h4 class="font-semibold text-lg mb-2 text-dark">
                      Description
                    </h4>
                    <p class="text-gray-700 leading-relaxed">
                      {session.description}
                    </p>
                  </div>
                )}
              </div>
            ))}
          </div>
        ) : (
          <div class="bg-gray-50 rounded-xl p-8 text-center">
            <p class="text-gray-600">No sessions scheduled yet.</p>
          </div>
        )
      }
    </div>
  </main>
</Layout>
